/* pages/login/login.wxss */
.container {
  display: flex;
  padding: 0 30rpx;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  gap: 25rpx;
  overflow: hidden;
}

.logo {
  height: 250rpx;
  width: 100vw;
  margin: 0 0 75rpx 0;
}

.login__button {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
  border-radius: 10rpx;
}
.phone_login2 {
  color: #ff9900;
}
.phone_login {
  border: 1px solid #ff9900;
  color: #ff9900;
}
.phone_login__form {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  padding: 50rpx 20rpx;
  box-sizing: border-box;
  gap: 30rpx;
  position: relative;
}

.phone_login__form__item {
  border-bottom: 1rpx dashed #ff9900;
}

.phone_login__form input {
  padding: 8rpx 0 8rpx 8rpx;
  text-align: left;
}

.phone_login__form .getVerifyCode {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  font-size: 30rpx;
  color: #555;
}

.wx_login {
  background-color: #ff9900;
  color: #000;
}

.agreement {
  display: flex;
  position: absolute;
  bottom: 60rpx;
  color: #9d9d9d;
  font-size: 24rpx;
}

.agreement .hls {
  margin-left: 10rpx;
  color: #ff9900;
}
